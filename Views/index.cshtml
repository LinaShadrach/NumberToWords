<!DOCTYPE html>
<html>
  <head>
    <link href="/Content/css/bootstrap.min.css" rel="stylesheet" type="text/css">
    <link href="/Content/css/styles.css" rel="stylesheet" type="text/css">
    <title>Number to Words!</title>
  </head>
  <body>
    <div class="container">
      <div class="jumbotron">
        <h1>Number to Word Presto Change-O!</h1>
      </div>
      <h2></h2><br>

        <form action="/result" method="post">
          <label for="input">Enter the number you wish to convert to words:</label>
          <input type="number" name="input">
          <button type="submit">PRESTO CHANGE-O</button>
        </form>
      @if (Model != null)
      {
        <h4>@Model.InputString equals @Model.OutputWord!!</h4>
      }
    </div>
  </body>
</html>
